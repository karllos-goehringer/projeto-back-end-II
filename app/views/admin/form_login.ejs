<form action="/autenticar" method="POST">
    <div class="form-group form-inline">
        <label for="usuario" class="label-spacing">Usuário:</label>
        <input type="text" class="form-control input-sm" id="usuario" name="usuario" placeholder="Usuário">
    </div>
     <div class="form-group form-inline">
        <label for="usuario" class="label-spacing">Senha:</label>
        <input type="text" class="form-control input-sm" id="senha" name="senha" placeholder="Usuário">
    </div>
     <div class="button-spacing">
        <button type="submit" class="btn btn-danger">Entrar</button>
    </div>
    <% if (validacao && validacao.length > 0) { %>
    <ul>
        <% validacao.forEach(function(erro) { %>
        <li><%= erro.msg %></li>
        <% }) %>
    </ul>
    <% } %>
</form>